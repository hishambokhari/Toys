<h2 class="text-center mt-4"><%= @toy.name %></h2>

<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <div class="card-header font-italic">
          by <%= @toy.user.username %>
        </div>
        <div class="card-body">
          <div class="card-text text-left"><%= simple_format(@toy.description) %></div>
          <%= link_to "Edit", edit_toy_path(@toy), class: "btn btn-outline-info" %>
          <%= link_to "Delete", toy_path(@toy), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Are you sure?"} %>
        </div>
        <div class="card-footer text-muted">
          <small>Created <%= time_ago_in_words(@toy.created_at) %> ago, 
          edited <%= time_ago_in_words(@toy.updated_at) %> ago</small>
        </div>
      </div>
    </div>
  </div>
</div>

