<div class="container">
  <div class="row justify-content-center">
  <div class="col-10">
  <%= render 'shared/errors' %> 
    <%= form_with(model: @toy, class: "shadow p-3 mb-3 bg-warning rounded", local: true) do |f| %>
      <div class="form-group row">
        <%= f.label :name, class: "col-2 col-form-label text-dark" %>
        <div class="col-10">
          <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Name of Toy card" %>
        </div>
      </div>
      <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-dark" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of Toy" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
        <%= f.submit class: "btn btn-outline-dark btn-lg" %>
      </div>
    <% end %>
  </div>
  <div class="mb-3">
    <%= link_to '[ Cancel and return to articles listing ]', toys_path, class: "text-dark" %>
  </div>
</div>
</div>