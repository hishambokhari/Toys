<div class="container">
<% @toys.each do |toy| %>
    <div class="row justify-content-md-center"> 
        <div class="col-8 mt-4">
            <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header font-italic">
                     by <%=link_to toy.user.username, user_path(toy.user) %>
                 </div>
             <div class="card-body">
            <h5 class="card-title"><%= link_to toy.name, toy_path(toy), class: "text-warning" %></h5>
            <p class="card-text"><%= truncate(toy.description, length: 100) %></p>
            <%= link_to "View", toy_path(toy), class: "btn btn-outline-success" %>
            <%= link_to "Edit", edit_toy_path(toy), class: "btn btn-outline-info" %>
            <%= link_to "Delete", toy_path(toy), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%=time_ago_in_words(toy.created_at) %> ago,
                    edited <%= time_ago_in_words(toy.updated_at) %> ago</small>
                 </div>
            </div>
        </div>
    </div>
<% end %>
</div>