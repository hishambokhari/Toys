<h1>New Toys</h1>

    <% if @toy.errors.any? %>
        <h2>The following errors prevented the article from being saved</h2>
        <ul>
            <% @toy.errors.full_messages.each do |msg| %>
               <li><%= msg %></li>
            <% end %>
        </ul>
    <% end %>

<%= form_with scope: :toy, url: toys_path, local: true do |f| %>

  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

